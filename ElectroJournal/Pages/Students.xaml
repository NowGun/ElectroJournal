<Page
    x:Class="ElectroJournal.Pages.Students"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ElectroJournal.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="Students"
    PreviewKeyUp="Page_PreviewKeyUp"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">
    <Grid>
        <wpfui:Card Margin="360,60,20,60">
            <Grid>
                <wpfui:DynamicScrollViewer
                    Margin="0,52,25,52"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                    <StackPanel Margin="0,0,15,0">
                        <ComboBox
                            x:Name="ComboBoxGroups"
                            Margin="0,0,0,10"
                            SelectionChanged="ComboBoxGroups_SelectionChanged" />
                        <ListBox x:Name="ListBoxGroups" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,0,5,0" MinWidth="250"/>
                    </StackPanel>
                </wpfui:DynamicScrollViewer>
                <TextBox
                    x:Name="TextBoxStudentsFIO"
                    Width="385"
                    Height="35"
                    Margin="197,52,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TextBoxStudentsPhone"
                    Width="125"
                    Height="35"
                    Margin="197,112,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MaxLength="12"
                    PreviewTextInput="TextBoxStudentsPhone_PreviewTextInput"
                    TextWrapping="Wrap"
                    UndoLimit="12" />
                <TextBox
                    x:Name="TextBoxStudentsResidence"
                    Width="385"
                    Height="35"
                    Margin="197,172,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    TextWrapping="Wrap" />
                <Label
                    Margin="22,240,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Номер карточки" />
                <StackPanel
                    Margin="197,232,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Label
                        x:Name="LabelCardId"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        Content="Отсутствует" VerticalContentAlignment="Center" />
                    <wpfui:Button
                        x:Name="ButtonChangeNumber"
                        Width="35"
                        Height="35"
                        Appearance="Transparent"
                        Click="ButtonChangeNumber_Click"
                        Icon="Edit24" Padding="10,6,0,6" />
                    <wpfui:Button
                        x:Name="ButtonDeleteNumber"
                        Width="35"
                        Height="35"
                        Appearance="Transparent"
                        Icon="Delete24" Padding="10,6,0,6" Margin="10,0,0,0" Click="ButtonDeleteNumber_Click" />
                </StackPanel>
                <TextBox
                    x:Name="TextBoxParentFIO"
                    Width="385"
                    Height="35"
                    Margin="197,322,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    TextWrapping="Wrap" />
                <TextBox
                    x:Name="TextBoxParentPhone"
                    Width="145"
                    Height="35"
                    Margin="197,377,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MaxLength="12"
                    PreviewTextInput="TextBoxStudentsPhone_PreviewTextInput"
                    TextWrapping="Wrap"
                    UndoLimit="12" />
                <Label
                    Width="170"
                    Height="35"
                    Margin="22,52,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="ФИО*"
                    FontSize="14" />
                <DatePicker
                    x:Name="DatePickerDateBirthday"
                    Width="135"
                    Height="35"
                    Margin="447,112,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    DisplayDate="2022-01-19" />
                <Label
                    Width="300"
                    Height="20"
                    Margin="197,32,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Bottom"
                    Content="Пример: Иванов Иван Иванович"
                    FontStyle="Italic" />
                <Label
                    Width="170"
                    Height="35"
                    Margin="22,112,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="Телефон"
                    FontSize="14" />
                <Label
                    Width="160"
                    Height="36"
                    Margin="0,0,195,9"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    Content="* - обязательные поля"
                    FontSize="14" />
                <Label
                    Width="170"
                    Height="30"
                    Margin="0,22,100,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="Группа*"
                    FontSize="14" />
                <Button
                    x:Name="ButtonSave"
                    Width="150"
                    Height="35"
                    Margin="0,0,10,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="ButtonSave_Click"
                    Content="Сохранить"
                    FontSize="14"
                    IsDefault="True"
                    Style="{StaticResource WPFUIButtonStandard}" />
                <Label
                    Margin="340,118,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="Дата рождения"
                    FontSize="14" />
                <Label
                    Width="170"
                    Height="35"
                    Margin="22,172,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="Место жительства"
                    FontSize="14" />
                <Label
                    Width="170"
                    Height="30"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="Студент"
                    FontSize="16" />
                <Label
                    Width="170"
                    Height="30"
                    Margin="10,287,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="Родитель"
                    FontSize="16" />
                <Label
                    Width="170"
                    Height="35"
                    Margin="22,322,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="ФИО родителя"
                    FontSize="14" />
                <Label
                    Width="170"
                    Height="35"
                    Margin="22,377,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="Телефон"
                    FontSize="14" />
                <ProgressBar
                    x:Name="ProgressBar"
                    Margin="0,0,165,17"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Foreground="#FF3567BC"
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    Visibility="Hidden" />
            </Grid>
        </wpfui:Card>

        <ListBox
            x:Name="ListBoxStudents"
            Width="300"
            Margin="20,110,0,60"
            Padding="2,50,2,0"
            HorizontalAlignment="Left"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            PreviewKeyUp="ListBoxStudents_PreviewKeyUp"
            SelectionChanged="ListBoxStudents_SelectionChanged" />
        <ProgressBar
            x:Name="ProgressBarListBox"
            Margin="150,219,0,239"
            HorizontalAlignment="Left"
            Foreground="#FF3567BC"
            IsIndeterminate="True"
            Style="{StaticResource MaterialDesignCircularProgressBar}"
            Visibility="Hidden" />
        <wpfui:SearchBox
            x:Name="SearchBox"
            Width="280"
            Margin="30,120,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Placeholder="Поиск по имени или группе"
            PreviewKeyUp="SearchBox_PreviewKeyUp" />

        <ComboBox
            x:Name="ComboBoxSortingGroups"
            Width="300"
            Height="35"
            Margin="20,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectionChanged="ComboBoxSorting_SelectionChanged" />
        <Button
            x:Name="ButtonAdd"
            Width="140"
            Height="35"
            Margin="20,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="ButtonAdd_Click"
            Content="Добавить"
            FontSize="14"
            Style="{StaticResource ResourceKey=WPFUIButtonStandard}" />
        <Button
            x:Name="ButtonDelete"
            Width="140"
            Height="35"
            Margin="180,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="ButtonDelete_Click"
            Content="Удалить"
            FontSize="14"
            IsEnabled="False"
            Style="{StaticResource ResourceKey=WPFUIButtonStandard}" />
        <ComboBox
            x:Name="ComboBoxSorting"
            Width="300"
            Height="35"
            Margin="20,65,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedIndex="0"
            SelectionChanged="ComboBoxSorting_SelectionChanged">
            <ComboBoxItem Content="А-Я" />
            <ComboBoxItem Content="Я-А" />
        </ComboBox>
    </Grid>
</Page>