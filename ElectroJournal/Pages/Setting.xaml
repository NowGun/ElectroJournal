                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="-221.667">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <wpfui:DynamicScrollViewer
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20,0,316,0"
            HorizontalScrollBarVisibility="Hidden">
            <StackPanel Margin="0,0,15,0" HorizontalAlignment="Stretch">
                <wpfui:CardExpander
                    x:Name="CardExpanderDefault"
                    FontSize="18"
                    FontWeight="Normal"
                    Header="Настройки приложения"
                    IsExpanded="True">
                    <StackPanel>
                        <Grid Margin="10,10,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.2*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Выберите тему"
                                TextWrapping="Wrap" />
                            <ComboBox
                                x:Name="ComboBoxTheme"
                                Grid.Column="1"
                                Width="200"
                                Height="35"
                                HorizontalAlignment="Right"
                                FontSize="14"
                                SelectionChanged="ComboBoxTheme_SelectionChanged">
                                <ComboBoxItem Content="Светлая" />
                                <ComboBoxItem Content="Темная" />
                            </ComboBox>
                        </Grid>
                        <Grid Margin="10,25,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Автоматически запускать ElectroJournal после включения компьютера"
                                TextWrapping="WrapWithOverflow" />
                            <CheckBox
                                x:Name="CheckBoxAutoRun"
                                Grid.Column="1"
                                Width="20"
                                Height="20"
                                Padding="0,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Right"
                                VerticalContentAlignment="Center"
                                Click="CheckBox_Click" />
                        </Grid>
                        <Grid Margin="10,25,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="При нажатии кнопки &quot;Закрыть&quot; сворачивать окно ElectroJournal"
                                TextWrapping="Wrap" />
                            <CheckBox
                                x:Name="CheckBoxCollapseToTray"
                                Grid.Column="1"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Right"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Click="CheckBox_Click"
                                Cursor="Hand" />
                        </Grid>
                        <Grid Margin="10,25,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Запомнить логин и пароль при входе"
                                TextWrapping="Wrap" />
                            <CheckBox
                                x:Name="CheckBoxRememberData"
                                Grid.Column="1"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Click="CheckBox_Click" />
                        </Grid>
                        <Grid Margin="10,25,10,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="Проверять обновление при запуске программы"
                                TextWrapping="Wrap" />
                            <CheckBox
                                x:Name="CheckBoxUpdate"
                                Grid.Column="1"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Click="CheckBox_Click" />
                        </Grid>
                    </StackPanel>
                </wpfui:CardExpander>
                <wpfui:CardExpander
                    x:Name="CardExpanderPrivate"
                    Margin="0,15,0,0"
                    Expanded="CardExpanderPrivate_Expanded"
                    FontSize="18"
                    FontWeight="Normal"
                    Header="Настройки приватности">
                    <Grid>
                        <StackPanel x:Name="stackPanel1">
                            <StackPanel.Effect>
                                <BlurEffect Radius="0" />
                            </StackPanel.Effect>
                            <StackPanel x:Name="stackPanel2">
                                <Grid Margin="10,0,10,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="0.1*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Padding="0,0,334,0"
                                        FontSize="14"
                                        Text="Скрыть номер телефона"
                                        TextWrapping="Wrap" />
                                    <CheckBox
                                        x:Name="CheckBoxShowPhone"
                                        Grid.Column="1"
                                        Width="20"
                                        Height="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        Click="CheckBoxDB_Click" />
                                </Grid>
                                <Grid Margin="10,25,10,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="0.1*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Padding="0,0,403.5,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontSize="14"
                                        Text="Скрыть почту"
                                        TextWrapping="Wrap" />
                                    <CheckBox
                                        x:Name="CheckBoxShowEmail"
                                        Grid.Column="1"
                                        Width="20"
                                        Height="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Click="CheckBoxDB_Click" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel
                            x:Name="stackPanel"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Opacity="0"
                            Orientation="Horizontal">
                            <ProgressBar
                                x:Name="ProgressBar"
                                Foreground="#FF3567BC"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}" />
                            <Label Margin="10,0,0,0" Content="Синхронизация данных" />
                        </StackPanel>

                    </Grid>

                </wpfui:CardExpander>
            </StackPanel>
        </wpfui:DynamicScrollViewer>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="20,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                        Padding="10,0,0,4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="Ip-адрес базы данных: "
                        FontSize="14" />
                    <Label
                        x:Name="LabelIpAddress"
                        Margin="5,0,10,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content=""
                        FontSize="14" />
                    <Button
                        x:Name="ButtonChangeBD"
                        Width="150"
                        Height="35"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="ButtonChangeBD_Click"
                        Content="Изменить"
                        Cursor="Hand"
                        FontSize="14"
                        Style="{DynamicResource WPFUIButtonStandard}" />

                </StackPanel>
                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <Label
                        x:Name="LabelVersion"
                        Margin="0,0,10,0"
                        Padding="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Content=""
                        FontSize="14" />
                    <Button
                        x:Name="ButtonOpenUpdater"
                        Width="250"
                        Height="35"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="ButtonOpenUpdater_Click"
                        Content="Проверить обновление"
                        FontSize="14"
                        Style="{DynamicResource WPFUIButtonStandard}" />
                    <Grid
                        x:Name="GridCheckUpdate"
                        Width="445"
                        Height="36"
                        Margin="0,0,0,0"
                        Opacity="0"
                        RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <StackPanel Orientation="Horizontal">
                            <Image
                                x:Name="image"
                                Width="35"
                                Height="35"
                                RenderTransformOrigin="0.5,0.5"
                                Source="/Images/Icons/icons8-ok-144.png"
                                Visibility="Collapsed">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <ProgressBar
                                x:Name="progressBar"
                                Width="445"
                                Margin="0,12,0,12"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                IsIndeterminate="True" />
                            <Label
                                x:Name="LabelNewVersion"
                                Margin="0,0,0,0"
                                Padding="0,0,0,4"
                                VerticalAlignment="Center"
                                Content="Обновление найдено"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </StackPanel>

        </Grid>
        <StackPanel
            x:Name="StackPanelSave"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Opacity="0"
            Orientation="Horizontal">
            <ProgressBar
                x:Name="ProgressBarTeachers"
                Foreground="#FF3567BC"
                IsIndeterminate="True"
                Style="{StaticResource MaterialDesignCircularProgressBar}" />
            <Label
                Margin="10,0,0,0"
                Padding="0,0,0,0"
                VerticalAlignment="Center"
                Content="Сохранение данных, пожалуйста подождите"
                FontSize="14" />
        </StackPanel>
    </Grid>
</Page>
