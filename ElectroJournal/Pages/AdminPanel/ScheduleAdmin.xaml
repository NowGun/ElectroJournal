<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectroJournal.Pages.AdminPanel"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Controls="clr-namespace:WPFUI.Controls;assembly=WPFUI" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ElectroJournal.Pages.AdminPanel.ScheduleAdmin"
      mc:Ignorable="d"
      Title="ScheduleAdmin" Height="530" Width="1165">
    <Grid>

        <Rectangle Fill="White" RadiusY="6" RadiusX="6" Stroke="#FFE6E9EB" RenderTransformOrigin="0.636,0.287"/>





        <DataGrid Margin="20,20,284,130" d:ItemsSource="{d:SampleData ItemCount=25}" IsSynchronizedWithCurrentItem="True" HorizontalGridLinesBrush="#FFD9D9D9" VerticalGridLinesBrush="#FFD9D9D9" d:IsHidden="True" Visibility="Hidden"/>
        <ListBox Margin="20,405,284,10" d:ItemsSource="{d:SampleData ItemCount=5}" d:IsHidden="True"/>
        <TreeView Margin="907,380,16,10" Background="White" BorderBrush="#FFD6D6D6"/>


        <wpfui:CardExpander
                Margin="0,10,10,0"
                Header="Расписание звонков"
                Icon="PanelLeftExpand20"
                 VerticalAlignment="Top" HorizontalAlignment="Right" Width="255">

            <Grid HorizontalAlignment="Center" Height="260" VerticalAlignment="Center" Width="244">
                <ListBox x:Name="ListBoxSchedule" HorizontalAlignment="Center" Height="260" VerticalAlignment="Center" Width="224" FontSize="14" Padding="2,22,2,0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListBoxItem Content="10 | 16:45 - 21:00 " FontSize="14"/>
                    <ListBoxItem Content="10 | 16:45 - 21:00 " FontSize="14"/>
                </ListBox>
                <Controls:Icon x:Name="IconAddScheduleCall" Glyph="Add20" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Height="15" Width="14" PreviewMouseLeftButtonUp="IconAddScheduleCall_PreviewMouseLeftButtonUp"/>
                <Controls:Icon x:Name="IconDeleteScheduleCall" Glyph="Delete20" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Height="15" Width="14" PreviewMouseLeftButtonUp="IconDeleteScheduleCall_PreviewMouseLeftButtonUp"/>
                <Controls:Icon x:Name="IconChangeScheduleCall" Glyph="Edit20" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Height="15" Width="14"/>
            </Grid>
        </wpfui:CardExpander>

    </Grid>
</Page>
