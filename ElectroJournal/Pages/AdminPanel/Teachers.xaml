<Page
    x:Class="ElectroJournal.Pages.AdminPanel.Teachers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ElectroJournal.Pages.AdminPanel"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI" xmlns:ui="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
    Title="Teachers"
    Width="1280"
    Height="605.04"
    mc:Ignorable="d">
    <Page.Resources />

    <Grid>
        <wpfui:Card Margin="362,60,20,60">
            <Grid>

                <ui:PersonPicture
                        x:Name="PersonPicture"
                    
                        Height="150"
                        VerticalAlignment="Top"
                        Margin="10,12,712,0" Width="150" />

                <ProgressBar
            x:Name="ProgressBarTeachers"
            Margin="717,424,135,15"
            Foreground="#FF3567BC"
            IsIndeterminate="True"
            Style="{StaticResource MaterialDesignCircularProgressBar}"
            Visibility="Hidden" />
                <Button
            x:Name="ButtonSave"
            Width="120"
            Height="30"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="ButtonSave_Click"
            Content="Сохранить"
            FontSize="14"
            IsDefault="True"
            Style="{StaticResource WPFUIButtonAccent}" />
                <Label
                Height="35"
                Margin="25,237,777,187"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="Логин*"
                FontSize="16"/>
                <TextBox
                x:Name="TextBoxTeachersLogin"
                Width="231"
                Height="35"
                Margin="100,237,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="14"
                MaxLength="20"
                Text="admin"
                TextWrapping="Wrap" />
                <Label
                Height="35"
                Margin="25,287,777,137"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="Пароль"
                FontSize="16"/>
                <PasswordBox
                x:Name="PasswordBoxTeachers"
                Width="231"
                Height="35"
                Margin="100,287,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                VerticalContentAlignment="Center" />
                <CheckBox
                x:Name="CheckBoxAdminAccess"
                Width="245"
                Height="30"
                Margin="25,337,602,92"
                Content="Доступ к панели администратора"
                Cursor="Hand" />
                <Label
                Height="35"
                Margin="185,47,635,377"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="ФИО*"
                FontSize="16"/>
                <TextBox
                x:Name="TextBoxTeachersFIO"                
                Width="576"
                Height="35"
                Margin="242,47,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="14"
                PreviewKeyUp="TextBoxTeachersFIO_PreviewKeyUp"
                TextWrapping="Wrap" />
                <TextBox
                x:Name="TextBoxTeachersPhone1"
                Width="153"
                Height="35"
                Margin="665,107,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                MaxLength="12"
                Text="89996061994"
                TextWrapping="Wrap"
                UndoLimit="12" />
                <TextBox
                x:Name="TextBoxTeachersMail1"
                Width="263"
                Height="35"
                Margin="242,107,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="zhirowdaniil@gmail.com"
                TextWrapping="Wrap" />
                <Label
                Height="35"
                Margin="242,12,336,412"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="Например: Иванов Иван Иванович"
                FontSize="14"
                FontStyle="Italic"/>
                <Label
                    Height="35"
                    Margin="185,107,632,317"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Content="Почта*"
                    FontSize="16"/>
                <Label
                    Height="35"
                    Margin="521,107,207,317"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Content="Номер телефона"
                    FontSize="16"/>
                <Label
                    Margin="25,419,442,10"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Content="* - обязательные для заполнения поля"
                    FontSize="16"/>

            </Grid>
        </wpfui:Card>
        <Button
            x:Name="ButtonAdd"
            Width="140"
            Height="35"
            Margin="20,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="ButtonAdd_Click"
            Content="Добавить"
            FontSize="14"
            Style="{StaticResource ResourceKey=WPFUIButtonStandard}" />
        <Button
            x:Name="ButtonDelete"
            Width="140"
            Height="35"
            Margin="180,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="ButtonDelete_Click"
            Content="Удалить"
            FontSize="14"
            Style="{StaticResource ResourceKey=WPFUIButtonStandard}" IsEnabled="False" />
        <ListBox
            x:Name="ListViewTeachers"
            Margin="20,97,960,60"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            SelectionChanged="ListViewTeachers_SelectionChanged" PreviewKeyUp="ListViewTeachers_PreviewKeyUp" />
        <ui:AutoSuggestBox
                        x:Name="SearchBox"
                        PlaceholderText="Поиск"                        
                        QueryIcon="Find"
                        Width="300"
                        HorizontalAlignment="Left" Margin="20,60,0,0" PreviewKeyUp="SearchBox_PreviewKeyUp" />
        <ComboBox x:Name="ComboBoxSortingTeacher" HorizontalAlignment="Left" Height="35" Margin="20,20,0,0" VerticalAlignment="Top" Width="300" SelectedIndex="0" SelectionChanged="ComboBoxSortingTeacher_SelectionChanged">
            <ComboBoxItem Content="А-Я"/>
            <ComboBoxItem Content="Я-А"/>
        </ComboBox>

    </Grid>
</Page>
