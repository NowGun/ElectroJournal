<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:ElectroJournal.Pages.AdminPanel"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="ElectroJournal.Pages.AdminPanel.Teachers"
      mc:Ignorable="d"
      Title="Teachers">
    <Page.Resources>



    </Page.Resources>

    <Grid>

        <wpfui:Button/>

        <Rectangle Fill="White" HorizontalAlignment="Stretch" RadiusY="6" RadiusX="6" VerticalAlignment="Stretch" Stroke="#FFE6E9EB" RenderTransformOrigin="0.636,0.287"/>
        <TextBox x:Name="TextBoxMahSearch"
                             Margin="10,53,0,0"
                             mah:TextBoxHelper.ButtonCommand="{Binding TextBoxButtonCmdWithParameter, Mode=OneWay}"
                             mah:TextBoxHelper.ButtonCommandParameter="{Binding Text, ElementName=test2}"
                             mah:TextBoxHelper.Watermark="Поиск"
                             Style="{DynamicResource MahApps.Styles.TextBox.Search}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" BorderBrush="#FFEDEDED" VerticalContentAlignment="Center" />
        <Button x:Name="ButtonAdd" Style="{StaticResource ResourceKey=ButtonAccent}" Content="Добавить" HorizontalAlignment="Left" Height="30" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="140" FontSize="14" Click="ButtonAdd_Click"/>
        <Button x:Name="ButtonDelete" Style="{StaticResource ResourceKey=ButtonStandard}" Content="Удалить" HorizontalAlignment="Left" Height="30" Margin="170,0,0,10" VerticalAlignment="Bottom" Width="140" FontSize="14" Click="ButtonDelete_Click"/>
        <Label Content="Преподаватели" HorizontalAlignment="Left" Height="30" Margin="45,11.321,0,0" VerticalAlignment="Top" Width="170" FontSize="16" VerticalContentAlignment="Center" Padding="5,0" Background="{x:Null}" Foreground="Black"/>
        <ListView x:Name="ListViewTeachers" Style="{x:Null}" HorizontalAlignment="Left" Margin="10,84,0,45" Width="300" BorderBrush="#FFEDEDED" SelectionChanged="ListViewTeachers_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" >Id</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Photo}" >Фото</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FIO}" >ФИО</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <ProgressBar x:Name="ProgressBarTeachers"
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                IsIndeterminate="True" Margin="993,495,135,15" Foreground="#FF3567BC" Visibility="Hidden" />

        <Button x:Name="ButtonSave" Style="{StaticResource ButtonAccent}" Content="Сохранить" HorizontalAlignment="Right" Height="30" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="120" FontSize="14" Click="ButtonSave_Click" IsDefault="True"/>
        <Image HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="30" Source="/Images/AdminIcons/Teachers/icons8-user-642.png"/>
        <ScrollViewer Margin="334,53,10,45">
            <Grid Height="432" Width="804">
                <GroupBox x:Name="GroupBoxPersonalData" Style="{x:Null}" Header="Личные данные" Margin="10,10,10,169" BorderBrush="#FFEDEDED" Foreground="#DD000000" FontSize="14">
                    <Grid HorizontalAlignment="Left" Height="257" VerticalAlignment="Top" Width="764" Margin="10,0,0,0">
                        <Label Content="ФИО" Margin="127,22,591,200" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="16" Foreground="#FF3E3E3E"/>
                        <TextBox x:Name="TextBoxTeachersFIO" HorizontalAlignment="Left" Style="{StaticResource ResourceKey=TextBoxStyleNew}" Height="35" Margin="178,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="576" Text="Например: Иванов Иван Иванович" FontSize="14" PreviewKeyUp="TextBoxTeachersFIO_PreviewKeyUp"/>
                        <Label Content="Фото" Margin="31,109,0,0" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" FontSize="14" FlowDirection="LeftToRight" Foreground="#E83E3E3E"/>
                        <Rectangle x:Name="RectangleTeachersPhoto" HorizontalAlignment="Left" Margin="6,69,0,78" Stroke="#FFEDEDED" Width="110" StrokeThickness="2.2" Height="110" RadiusX="55" RadiusY="55" PreviewMouseLeftButtonUp="RectangleTeachersPhoto_PreviewMouseLeftButtonUp" Fill="#01FFFFFF"/>
                        <GroupBox x:Name="GroupBoxPhone" Style="{x:Null}" Header="Телефон" Margin="141,93,439,90">
                            <Grid HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="178">
                                <TextBox x:Name="TextBoxTeachersPhone1" MaxLength="12" HorizontalAlignment="Left" Style="{StaticResource ResourceKey=TextBoxStyleNew}" Height="35" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Text="89996061994" UndoLimit="12"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox x:Name="GroupBoxMail" Style="{x:Null}" Header="Почта" Margin="330,93,10,90">
                            <Grid HorizontalAlignment="Left" Height="61" VerticalAlignment="Center" Width="414">
                                <TextBox x:Name="TextBoxTeachersMail1" HorizontalAlignment="Center" Style="{StaticResource ResourceKey=TextBoxStyleNew}" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" Width="394" Text="zhirowdaniil@gmail.com"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="GroupBoxloginDetails" Style="{x:Null}" Header="Данные для входа" Margin="10,268,10,10" BorderBrush="#FFEDEDED" Foreground="#DD000000" FontSize="14">
                    <Grid HorizontalAlignment="Left" Height="131" VerticalAlignment="Top" Width="764" Margin="10,0,0,0">
                        <Label Content="Логин" Margin="10,10,684,86" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="16" Foreground="#FF3E3E3E"/>
                        <TextBox x:Name="TextBoxTeachersLogin" MaxLength="20" HorizontalAlignment="Left" Style="{StaticResource ResourceKey=TextBoxStyleNew}" Height="35" Margin="85,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" Text="admin" FontSize="14"/>
                        <Label Content="Пароль" Margin="10,51,684,45" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="16" Foreground="#FF3E3E3E"/>
                        <PasswordBox x:Name="PasswordBoxTeachers"  HorizontalAlignment="Left" Height="35" Margin="85,51,0,0" VerticalAlignment="Top" Width="231" VerticalContentAlignment="Center"/>
                        <CheckBox x:Name="CheckBoxAdminAccess" Content="Доступ к панели администратора" HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="245" Margin="10,96,0,0"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

    </Grid>
</Page>
