                <DiscreteObjectKeyFrame KeyTime="00:00:00.3000000" Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid
            x:Name="grid"
            Grid.Column="0"
            HorizontalAlignment="Left"
            RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Grid.RenderTransform>
            <ListBox
                x:Name="ListBoxStudent"
                MinWidth="275"
                Padding="2,50,2,0"
                SelectionChanged="ListBoxStudent_SelectionChanged" />
            <wpfui:SearchBox
                x:Name="SearchBoxStudents"
                Height="35"
                Margin="10,10,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Placeholder="Поиск"
                PreviewKeyUp="SearchBoxStudents_PreviewKeyUp" />
        </Grid>
        <Grid x:Name="grid1" Grid.Column="1">
            <wpfui:Card
                x:Name="card"
                Height="60"
                Padding="6,6,6,6"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0.5">
                <wpfui:Card.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </wpfui:Card.RenderTransform>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            x:Name="LabelGroupName"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Группа"
                            FontSize="22" />
                        <Menu
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            BorderBrush="Transparent">
                            <MenuItem
                                Padding="6,0,6,0"
                                FontSize="16"
                                Header="Отчеты">
                                <MenuItem Header="Составить ведомость оценок" />
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                </Grid>
            </wpfui:Card>
            <wpfui:DynamicScrollViewer
                x:Name="dynamicScrollViewer"
                Margin="0,70,0,75"
                RenderTransformOrigin="0.5,0.5">
                <wpfui:DynamicScrollViewer.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </wpfui:DynamicScrollViewer.RenderTransform>
            </wpfui:DynamicScrollViewer>
            <wpfui:CardAction
                x:Name="CardActionOpenStatsStud"
                Height="65"
                VerticalAlignment="Bottom"
                Click="CardActionOpenStatsStud_Click"
                Icon="PersonNote24"
                RenderTransformOrigin="0.5,0.5">
                <wpfui:CardAction.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </wpfui:CardAction.RenderTransform>
                <StackPanel>
                    <Label
                        x:Name="LabelFIOStudent"
                        Margin="0,0,0,4"
                        Content="Фамилия Имя Отчество"
                        FontSize="14" />
                    <Label
                        Content="Нажмите чтобы посмотреть подробную информацию о студенте"
                        FontSize="11"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                </StackPanel>
            </wpfui:CardAction>
        </Grid>
        <Grid
            x:Name="GridStudentInfo"
            Grid.ColumnSpan="2"
            RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <wpfui:SymbolIcon x:Name="SymbolIconBack"
                    Grid.Row="0"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    Cursor="Hand"
                    FontSize="20"
                    Symbol="ArrowLeft24" PreviewMouseLeftButtonUp="SymbolIconBack_PreviewMouseLeftButtonUp" />
                <Label
                    x:Name="LabelNameStud"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Content="Фамилия Имя Отчество"
                    FontSize="18" />
            </StackPanel>
            <Frame x:Name="FrameStud" Grid.Row="1" />
        </Grid>
    </Grid>
</Page>
