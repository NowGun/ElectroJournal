    </Window.Resources>



    <Grid x:Name="GridDefault" x:FieldModifier="public">
        <Grid
            x:Name="GridBlackTheme"
            d:IsHidden="True"
            Visibility="Hidden">
            <Grid.Background>
                <LinearGradientBrush MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
                    <GradientStop Color="#FF1D2029" />
                    <GradientStop Offset="1" Color="#FF1D2029" />
                    <GradientStop Offset="0.457" Color="#FF192033" />
                    <GradientStop Offset="0.609" Color="#FF192033" />
                    <GradientStop Offset="0.787" Color="#FF19212E" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid x:Name="GridWhiteTheme" Visibility="Hidden">
            <Grid.Background>
                <LinearGradientBrush MappingMode="RelativeToBoundingBox" SpreadMethod="Pad" StartPoint="-0.5,1.2" EndPoint="1.4,3.7">
                    <GradientStop Color="#FFECF5FA" />
                    <GradientStop Offset="1" Color="#FFF9F1EE" />
                    <GradientStop Offset="0.417" Color="#FFF9F3E7" />
                    <GradientStop Offset="0.213" Color="#FFEBF6F8" />
                    <GradientStop Offset="0.787" Color="#FFF9F2EA" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid x:Name="grid">
            <Grid.Effect>
                <BlurEffect KernelType="Gaussian" Radius="0" />
            </Grid.Effect>
            <Grid
                x:Name="GridNLogin"
                Margin="0,48,0,0"
                VerticalAlignment="Top"
                d:IsHidden="True">
                <wpfui:Icon
                    x:Name="IconSetting2"
                    Margin="0,0,17,0"
                    HorizontalAlignment="Right"
                    FontSize="20"
                    Glyph="Settings20"
                    MouseLeave="RectangleUser_MouseLeave"
                    MouseMove="RectangleUser_MouseMove"
                    PreviewMouseLeftButtonUp="IconSetting_PreviewMouseLeftButtonUp" />
                <ui:NavigationView
                    x:Name="NavViewMenuNLogin"
                    Height="40"
                    MinWidth="100"
                    Margin="10,0,365,0"
                    VerticalAlignment="Top"
                    IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="False"
                    PaneDisplayMode="Top">
                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem
                            x:Name="NavigationViewItemSchedule1"
                            Content="Расписание"
                            PreviewMouseLeftButtonUp="NavigationViewItemSchedule_PreviewMouseLeftButtonUp" />
                        <ui:NavigationViewItem
                            x:Name="NavigationViewItemBoard1"
                            Content="Доска"
                            PreviewMouseLeftButtonUp="NavigationViewItemBoard_PreviewMouseLeftButtonUp" />
                        <ui:NavigationViewItem
                            x:Name="NavigationViewItemWord1"
                            Content="Текстовый редактор"
                            PreviewMouseLeftButtonUp="NavigationViewItemWord_PreviewMouseLeftButtonUp" />
                    </ui:NavigationView.MenuItems>
                </ui:NavigationView>
                <Button
                    x:Name="ButtonShowLogin"
                    Width="140"
                    Height="30"
                    Margin="0,0,45,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="ButtonShowLogin_Click"
                    Content="Войти"
                    FontSize="14"
                    IsEnabled="False"
                    Style="{DynamicResource WPFUIButtonStandard}" />

            </Grid>
            <Label
                x:Name="LabelScheduleCall"
                Height="36"
                Margin="245,6,435,0"
                Padding="0,0,10,4"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <wpfui:TitleBar
                x:Name="TitleBar"
                Grid.Row="0"
                Height="48"
                ApplicationNavigation="True"
                Background="#00000000"
                Icon="/Images/Logo/logo75.png"
                MinimizeToTray="False"
                NotifyIconDoubleClick="TitleBar_NotifyIconDoubleClick"
                NotifyIconImage="/Images/Logo/logo75.png"
                NotifyIconTooltip="ElectroJournal"
                UseNotifyIcon="True">
                <wpfui:TitleBar.NotifyIconMenu>
                    <ContextMenu>
                        <MenuItem
                            x:Name="MenuItemOpen"
                            Click="MenuItemOpen_Click"
                            Header="Открыть"
                            Icon="{x:Static wpfuiCommon:Icon.Library28}"
                            Tag="open" />
                        <MenuItem
                            x:Name="MenuItemExit"
                            Click="MenuItemExit_Click"
                            Header="Выйти"
                            Icon="{x:Static wpfuiCommon:Icon.Library28}"
                            Tag="exit" />
                    </ContextMenu>
                </wpfui:TitleBar.NotifyIconMenu>
            </wpfui:TitleBar>
            <Menu
                x:Name="MenuEJ"
                Height="50"
                Margin="48,-2,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{x:Null}"
                BorderBrush="{x:Null}">
                <MenuItem
                    Height="43"
                    Padding="6,0,6,0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="14"
                    Header="ElectroJournal">
                    <MenuItem
                        x:Name="MenuItemEJHelp"
                        Click="MenuItemEJHelp_Click"
                        Header="Справка" />
                    <MenuItem
                        x:Name="MenuItemEJProgInfo"
                        Click="MenuItemEJProgInfo_Click"
                        Header="О программе" />
                    <MenuItem
                        x:Name="MenuItemEJBug"
                        Click="MenuItemEJBug_Click"
                        Header="Баг-репортер" />
                    <!-- <MenuItem
                    x:Name="MenuItemEJSettings"
                    Click="MenuItemEJSettings_Click"
                    Header="Настройки" />-->
                </MenuItem>
                <MenuItem
                    x:Name="MenuBoard"
                    Height="42"
                    Header="Доска">
                    <MenuItem Header="Открыть" />
                    <MenuItem Header="Сохранить" />
                    <MenuItem Header="Сохранить как">
                        <MenuItem Header="Изображение в формате PNG" />
                        <MenuItem Header="Изображение в формате JPEG" />
                    </MenuItem>
                    <MenuItem
                        x:Name="MenuItemBoardPrint"
                        Click="MenuItemBoardPrint_Click"
                        Header="Печать" />
                    <MenuItem
                        x:Name="MenuItemBoardFullScreen"
                        Click="MenuItemBoardFullScreen_Click"
                        Header="Во весь экран" />
                </MenuItem>
            </Menu>
            <Frame
                x:Name="Frame"
                Margin="0,99,0,0"
                Content=""
                Navigated="Frame_Navigated"
                Navigating="Frame_Navigating"
                NavigationUIVisibility="Hidden"
                RenderTransformOrigin="0.5,0.5">
                <Frame.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Frame.RenderTransform>
            </Frame>
            <controls1:NotificationArea
                x:Name="WindowArea"
                Margin="0,99,8,8"
                d:IsHidden="True"
                MaxItems="3"
                Position="TopRight" />
            <Grid
                x:Name="GridMenu"
                Height="593"
                MinWidth="1272"
                Margin="0,6,0,0"
                VerticalAlignment="Top"
                x:FieldModifier="public"
                Visibility="Visible">
                <wpfui:Icon
                    x:Name="RectangleBackToMenu"
                    Width="28"
                    Height="32"
                    Margin="20,47,0,0"
                    HorizontalAlignment="Left"
