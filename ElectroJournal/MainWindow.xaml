<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroJournal" 
    
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:muxc="http://schemas.modernwpf.com/2019"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:wpfuiCommon="clr-namespace:WPFUI.Common;assembly=WPFUI"
        xmlns:controls1="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"    
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"    
    
        
        x:Class="ElectroJournal.MainWindow"
        mc:Ignorable="d"
        Title="ElectroJournal" Height="720" Width="1280" Icon="Images/Logo/logo75.ico" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Style="{DynamicResource UiWindowRounded}" Background="#FFEDF1F4">
    <Window.Resources>
        <Storyboard x:Key="AnimLoadLogin">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="RectangleLoadLogin">
                <EasingDoubleKeyFrame KeyTime="0" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimShowLoading">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="RectangleLoadLogin">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimOpenFrame">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="Frame">
                <EasingDoubleKeyFrame KeyTime="0" Value="159">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuinticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-3">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuinticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimOpenMenuAdmin"/>
        <Storyboard x:Key="AnimOpenMenu"/>
        <Storyboard x:Key="AnimOpenMenuStart">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimToBlackTheme">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="LabelLesson" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FFE0E2E5"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="LabelTime" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FFE0E2E5"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="LabelPeriodLesson" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FFE0E2E5"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="LabelEndLesson" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FFE0E2E5"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TextBlockTeacher" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FFE0E2E5"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF181818"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF181818"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="rectangle1" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF444546"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="rectangle1" Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF444546"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="LabelPasswordGridLogin" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FFE0E2E5"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="LabelLoginGridLogin" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FFE0E2E5"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimLogoutUser">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GridLogin" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridLogin" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>


    </Window.Resources>



    <Grid x:Name="GridDefault" x:FieldModifier="public">

        <wpfui:TitleBar Grid.Row="0" ApplicationNavigation="True" Title="ElectroJournal" Height="43" />
        <Grid x:Name="GridMenu" Height="131" VerticalAlignment="Top" MinWidth="1272" Visibility="Visible" x:FieldModifier="public" Margin="0,48,0,0">
            <Rectangle x:Name="rectangle" Height="91" VerticalAlignment="Top" Margin="0,-5,0,0"/>
            <wpfui:Icon x:Name="RectangleBackToMenu" Glyph="ArrowLeft12" HorizontalAlignment="Left" Margin="17,49,0,0" VerticalAlignment="Top" Height="32" Width="28" MouseLeftButtonUp="RectangleBackToMenu_MouseLeftButtonUp" FontSize="20" HorizontalContentAlignment="Center"/>
            <Menu x:Name="MenuEJ" Margin="10,-5,0,0" Background="{x:Null}" Height="43" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="{x:Null}">
                <MenuItem Header="EJ" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="6,0,6,0" Height="43" FontFamily="Segoe UI Historic" FontSize="14">
                    <MenuItem x:Name="MenuItemEJCalculator" Header="Калькулятор" Click="MenuItemEJCalculator_Click"/>
                    <MenuItem x:Name="MenuItemEJSettings" Header="Настройки" Click="MenuItemEJSettings_Click"/>
                    <MenuItem x:Name="MenuItemEJUpdate" Header="Проверить наличие обновлений" Click="MenuItemEJUpdate_Click"/>
                    <MenuItem x:Name="MenuItemEJHelp" Header="Справка" Click="MenuItemEJHelp_Click"/>
                    <MenuItem x:Name="MenuItemEJProgInfo" Header="О программе" Click="MenuItemEJProgInfo_Click"/>
                    <MenuItem x:Name="MenuItemEJBug" Header="Баг-репортер" Click="MenuItemEJBug_Click"/>
                </MenuItem>
                <MenuItem x:Name="MenuBoard" Header="Доска" Height="42">
                    <MenuItem Header="Открыть"/>
                    <MenuItem Header="Сохранить"/>
                    <MenuItem Header="Сохранить как">
                        <MenuItem Header="Изображение в формате PNG"/>
                        <MenuItem Header="Изображение в формате JPEG"/>
                    </MenuItem>
                    <MenuItem x:Name="MenuItemBoardPrint" Header="Печать" Click="MenuItemBoardPrint_Click"/>
                    <MenuItem x:Name="MenuItemBoardFullScreen" Header="Во весь экран" Click="MenuItemBoardFullScreen_Click"/>
                </MenuItem>
            </Menu>
            <Grid x:Name="GridInformation" Height="35" Margin="352,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" >
                <Label x:Name="LabelLesson"  Content="Урок: 4" Height="30" Margin="146,2.5,724,2.5" VerticalAlignment="Center" Foreground="#FF3E3E3E" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelGroup" Content="Группа:" Height="30" Margin="604,2.5,261,2.5" VerticalAlignment="Center" Foreground="#FF3E3E3E" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelTime" Content="Время:  18:50:55" Height="30" Margin="26,2.5,800,2.5" VerticalAlignment="Center" Foreground="#FF3E3E3E" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelPeriodLesson" Content="Период занятий: 8:30 - 9:10" Height="30" Margin="208,0,537,0" VerticalAlignment="Center" Foreground="#FF3E3E3E" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelEndLesson" Content="Конец занятия через: 5 минут" Height="30" Margin="409,2.5,347,2.5" VerticalAlignment="Center" Foreground="#FF3E3E3E" VerticalContentAlignment="Center"/>
                <ComboBox x:Name="ComboBoxGroup" Margin="656,0,43,0" RenderTransformOrigin="0.5,0.5" Grid.IsSharedSizeScope="True">
                    <ComboBoxItem Content="ПКС 4"/>
                </ComboBox>
            </Grid>
            <Grid x:Name="GridUser" HorizontalAlignment="Right" Height="50" Margin="0,36,10,0" VerticalAlignment="Top" Width="242">
                <Rectangle x:Name="RectangleUser" Height="45" VerticalAlignment="Center" Width="45" RadiusY="22" RadiusX="22" MouseLeftButtonUp="RectangleUser_MouseLeftButtonUp" MouseMove="RectangleUser_MouseMove" MouseLeave="RectangleUser_MouseLeave" HorizontalAlignment="Left">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/icons8-male-user-48.png" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock x:FieldModifier="public" x:Name="TextBlockTeacher" HorizontalAlignment="Left" Height="20" Margin="50,0,0,0" TextWrapping="Wrap" Text="Фамилия И. О." VerticalAlignment="Center" Width="192" MaxWidth="179.5" FontSize="14" Foreground="#FF3E3E3E"/>
            </Grid>
            <Path x:Name="path" Data="M42.5,48 L1220.0239,48" Fill="#FFF4F4F5" Height="1" Stretch="Fill" Stroke="#FFE0E0E0" VerticalAlignment="Top" Visibility="Visible" Margin="0,35,0,0"/>
            <Label x:Name="asdasd" Content="Label" HorizontalAlignment="Left" Height="41" VerticalAlignment="Top" Width="92" Margin="251,10,0,0" Foreground="Black"/>

        </Grid>
        <Frame x:Name="Frame" Content="" Margin="30,139,30,10" NavigationUIVisibility="Hidden" RenderTransformOrigin="0.5,0.5" ContentRendered="Frame_ContentRendered">
            <Frame.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Frame.RenderTransform>
        </Frame>
        <Grid x:Name="GridLogin" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="284">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Rectangle x:Name="rectangle1" Fill="White" HorizontalAlignment="Left" Height="254" Margin="18.666,17.333,0,0" Stroke="#FFE6E9EB" VerticalAlignment="Top" Width="327" RadiusY="8" RadiusX="8"/>


            <Label x:Name="LabelPasswordGridLogin" Foreground="#FF3E3E3E" Content="Пароль" HorizontalAlignment="Left" Margin="72.666,132.332,0,0" VerticalAlignment="Top" Height="30" Width="116" FontSize="14" Padding="0,5,5,5"/>
            <Label x:Name="LabelLoginGridLogin" Foreground="#FF3E3E3E" Content="Введите логин" HorizontalAlignment="Left" Margin="72.666,53.332,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.517,0.558" Height="30" Width="176" FontSize="14" Padding="0,5,5,5"/>
            <Button x:Name="ButtonLogin" Style="{StaticResource ButtonAccent}" Content="Войти" HorizontalAlignment="Left" Margin="189.666,211.665,0,0" VerticalAlignment="Top" Width="102" Click="ButtonLogin_Click" Height="25" IsDefault="True"/>
            <PasswordBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Margin="71.666,162.332,0,0" VerticalAlignment="Top" Height="36" Width="220" BorderBrush="#FFECECEC" Background="#FFFEFEFE" Foreground="#FF3E3E3E" Password="admin" VerticalContentAlignment="Center" FontSize="16"/>
            <TextBox x:Name="TextBoxLogin" MaxLength="20" HorizontalAlignment="Left" Height="36" Margin="71.666,83.332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Text="admin" Style="{DynamicResource TextBoxStyleNew}" Padding="6,0" HorizontalScrollBarVisibility="Auto" FontSize="16" VerticalContentAlignment="Center"/>
            <Rectangle x:Name="RectangleLoadLogin" HorizontalAlignment="Left" Height="25" Margin="296.666,211.665,0,0" VerticalAlignment="Top" Width="25" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Images/34px-Vector_Loading.svg.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Image x:Name="ImageForgotPassword" ToolTip="Сменить пароль" HorizontalAlignment="Left" Height="25" Margin="72,212,0,0" VerticalAlignment="Top" Width="27" Source="/Images/icons8-password-reset-48.png" MouseLeave="ImageForgotPassword_MouseLeave" MouseLeftButtonUp="ImageForgotPassword_MouseLeftButtonUp" MouseMove="ImageForgotPassword_MouseMove"/>
            <Image x:Name="ImageChangeDB" ToolTip="Сменить соединение базы данных" HorizontalAlignment="Left" Height="25" Margin="106,212,0,0" VerticalAlignment="Top" Width="27" Source="/Images/icons8-database-administrator-48.png" MouseLeave="ImageForgotPassword_MouseLeave" MouseLeftButtonUp="ImageChangeDB_MouseLeftButtonUp" MouseMove="ImageForgotPassword_MouseMove"/>
            <Button x:Name="ButtonOpenNotLogin" Content="NLogin" HorizontalAlignment="Left" Margin="216,46,0,0" VerticalAlignment="Top" Click="ButtonOpenNotLogin_Click" Cursor="Hand"/>

        </Grid>
        <controls1:NotificationArea x:Name="WindowArea" Position="TopRight" MaxItems="3" Margin="0,48,8,8" d:IsHidden="True"/>

    </Grid>
</Window>
