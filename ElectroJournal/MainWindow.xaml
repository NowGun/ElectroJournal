<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroJournal" 
    
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:muxc="http://schemas.modernwpf.com/2019"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:wpfuiCommon="clr-namespace:WPFUI.Common;assembly=WPFUI"
        xmlns:controls1="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"    
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"    
    
        
        x:Class="ElectroJournal.MainWindow"
        mc:Ignorable="d"
        Title="ElectroJournal" Height="720" Width="1280"  WindowStartupLocation="CenterScreen" Closing="Window_Closing" Style="{DynamicResource UiWindowRounded}" Loaded="Window_Loaded" Icon="/Images/Logo/logo75.png">
    <Window.Resources>
        <Storyboard x:Key="AnimLoadLogin">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="RectangleLoadLogin">
                <EasingDoubleKeyFrame KeyTime="0" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimShowLoading">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="RectangleLoadLogin">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimOpenFrame">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimOpenMenuAdmin"/>
        <Storyboard x:Key="AnimOpenMenu"/>
        <Storyboard x:Key="AnimOpenMenuStart">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimToBlackTheme">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF181818"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF181818"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimLogoutUser">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GridLogin2" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridLogin2" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimCloseFrame">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>


    </Window.Resources>



    <Grid x:Name="GridDefault" x:FieldModifier="public">

        <wpfui:TitleBar x:Name="TitleBar" Grid.Row="0" ApplicationNavigation="True"  Height="48" Icon="/Images/Logo/logo75.png"
                        MinimizeToTray="False"                        
                        NotifyIconImage="/Images/Logo/logo75.png"
                        NotifyIconTooltip="ElectroJournal"
                        UseNotifyIcon="True" NotifyIconDoubleClick="TitleBar_NotifyIconDoubleClick" Background="#00000000">
            <wpfui:TitleBar.NotifyIconMenu>
                <ContextMenu>
                    <MenuItem x:Name="MenuItemOpen" Header="Открыть"
                              Icon="{x:Static wpfuiCommon:Icon.Library28}"
                              Tag="open" Click="MenuItemOpen_Click"/>
                    <MenuItem x:Name="MenuItemExit" Header="Выйти"
                              Icon="{x:Static wpfuiCommon:Icon.Library28}"
                              Tag="exit" Click="MenuItemExit_Click"/>
                </ContextMenu>
            </wpfui:TitleBar.NotifyIconMenu>
        </wpfui:TitleBar>
        <Grid x:Name="GridMenu" Height="52" VerticalAlignment="Top" MinWidth="1272" Visibility="Visible" x:FieldModifier="public" Margin="0,48,0,0">
            <wpfui:Icon x:Name="RectangleBackToMenu" Glyph="ArrowLeft12" HorizontalAlignment="Left" Margin="17,13,0,0" Height="32" Width="28" MouseLeftButtonUp="RectangleBackToMenu_MouseLeftButtonUp" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
            <Menu x:Name="MenuEJ" Margin="45,-48,0,0" Background="{x:Null}" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="{x:Null}">
                <MenuItem Header="ElectroJournal" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="6,0,6,0" Height="43" FontFamily="Segoe UI Historic" FontSize="14">
                    <MenuItem x:Name="MenuItemEJCalculator" Header="Калькулятор" Click="MenuItemEJCalculator_Click"/>
                    <MenuItem x:Name="MenuItemEJHelp" Header="Справка" Click="MenuItemEJHelp_Click"/>
                    <MenuItem x:Name="MenuItemEJProgInfo" Header="О программе" Click="MenuItemEJProgInfo_Click"/>
                    <MenuItem x:Name="MenuItemEJBug" Header="Баг-репортер" Click="MenuItemEJBug_Click"/>
                    <MenuItem x:Name="MenuItemEJSettings" Header="Настройки" Click="MenuItemEJSettings_Click"/>
                </MenuItem>
                <MenuItem x:Name="MenuBoard" Header="Доска" Height="42">
                    <MenuItem Header="Открыть"/>
                    <MenuItem Header="Сохранить"/>
                    <MenuItem Header="Сохранить как">
                        <MenuItem Header="Изображение в формате PNG"/>
                        <MenuItem Header="Изображение в формате JPEG"/>
                    </MenuItem>
                    <MenuItem x:Name="MenuItemBoardPrint" Header="Печать" Click="MenuItemBoardPrint_Click"/>
                    <MenuItem x:Name="MenuItemBoardFullScreen" Header="Во весь экран" Click="MenuItemBoardFullScreen_Click"/>
                </MenuItem>
            </Menu>
            <Grid x:Name="GridInformation" Height="35" Margin="0,-41,117,0" VerticalAlignment="Top" HorizontalAlignment="Right" >
                <Label x:Name="LabelLesson"  Content="Урок: 4" Height="30" Margin="146,2.5,724,2.5" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelGroup" Content="Группа:" Height="30" Margin="604,2.5,261,2.5" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelTime" Content="Время:  18:50:55" Height="30" Margin="26,2.5,800,2.5" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelPeriodLesson" Content="Период занятий: 8:30 - 9:10" Height="30" Margin="208,0,537,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Label x:Name="LabelEndLesson" Content="Конец занятия через: 5 минут" Height="30" Margin="409,2.5,347,2.5" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <ComboBox x:Name="ComboBoxGroup" Margin="656,0,43,0" RenderTransformOrigin="0.5,0.5" Grid.IsSharedSizeScope="True">
                    <ComboBoxItem Content="ПКС 4"/>
                </ComboBox>
            </Grid>
            <Grid x:Name="GridUser" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Top">
                <ui:PersonPicture
                        x:Name="PersonPicture"
                    MouseLeftButtonUp="RectangleUser_MouseLeftButtonUp" MouseMove="RectangleUser_MouseMove" MouseLeave="RectangleUser_MouseLeave"
                        Height="40"
                        VerticalAlignment="Center"
                        Margin="270,0,0,0" Width="40" />
                <TextBlock x:FieldModifier="public" x:Name="TextBlockTeacher" HorizontalAlignment="Left" Margin="152,0,0,0" TextWrapping="Wrap" Text="Фамилия И. О." VerticalAlignment="Center" MaxWidth="179.5" FontSize="14"/>
            </Grid>
            <Path x:Name="path" Data="M42.5,48 L1220.0239,48" Fill="#FFF4F4F5" Height="1" Stretch="Fill" Stroke="#FFE0E0E0" VerticalAlignment="Top" Visibility="Visible" Margin="0,49,0,0">
                <Path.Effect>
                    <DropShadowEffect Color="#7F3A3A3A" BlurRadius="5" ShadowDepth="1" Opacity="0.1"/>
                </Path.Effect>
            </Path>
            <Label x:Name="asdasd" Content="Label" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="54" Margin="176,-36,0,0"/>
            <ui:NavigationView x:Name="NavViewMenuAdmin"
                PaneDisplayMode="Top"
                IsBackButtonVisible="Collapsed"
                MinWidth="100" Margin="45,9,510,0" VerticalAlignment="Top" IsSettingsVisible="False" Height="40" d:IsHidden="True">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem x:Name="NavigationViewItemTeachers" Content="Преподаватели" PreviewMouseLeftButtonUp="NavigationViewItemJournal_PreviewMouseLeftButtonUp" MouseLeftButtonUp="NavigationViewItemTeachers_MouseLeftButtonUp"/>
                    <ui:NavigationViewItem x:Name="NavigationViewItemDisciplines" Content="Предметы" PreviewMouseLeftButtonUp="NavigationViewItemSchedule_PreviewMouseLeftButtonUp" MouseLeftButtonUp="NavigationViewItemDisciplines_MouseLeftButtonUp" />
                    <ui:NavigationViewItem x:Name="NavigationViewItemStudents" Content="Студенты" PreviewMouseLeftButtonUp="NavigationViewItemBoard_PreviewMouseLeftButtonUp" MouseLeftButtonUp="NavigationViewItemStudents_MouseLeftButtonUp"/>
                    <ui:NavigationViewItem x:Name="NavigationViewItemGroups" Content="Группы" PreviewMouseLeftButtonUp="NavigationViewItemWord_PreviewMouseLeftButtonUp" MouseLeftButtonUp="NavigationViewItemGroups_MouseLeftButtonUp"/>
                    <ui:NavigationViewItem x:Name="NavigationViewItemCabinets" Content="Кабинеты" PreviewMouseLeftButtonUp="NavigationViewItemAdminPanel_PreviewMouseLeftButtonUp" MouseLeftButtonUp="NavigationViewItemCabinets_MouseLeftButtonUp"/>
                    <ui:NavigationViewItem x:Name="NavigationViewItemScheduleAdmin" Content="Расписание" PreviewMouseLeftButtonUp="NavigationViewItemAdminPanel_PreviewMouseLeftButtonUp" MouseLeftButtonUp="NavigationViewItemScheduleAdmin_MouseLeftButtonUp"/>
                </ui:NavigationView.MenuItems>
            </ui:NavigationView>
            <ui:NavigationView x:Name="NavViewMenu"
                                    PaneDisplayMode="Top"
                                    IsBackButtonVisible="Collapsed"
                                    MinWidth="100" Margin="45,9,330,0" VerticalAlignment="Top" IsSettingsVisible="False" Height="40">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem x:Name="NavigationViewItemJournal" Content="Журнал" PreviewMouseLeftButtonUp="NavigationViewItemJournal_PreviewMouseLeftButtonUp"/>
                    <ui:NavigationViewItem x:Name="NavigationViewItemSchedule" Content="Расписание" PreviewMouseLeftButtonUp="NavigationViewItemSchedule_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem x:Name="NavigationViewItemBoard" Content="Доска" PreviewMouseLeftButtonUp="NavigationViewItemBoard_PreviewMouseLeftButtonUp"/>
                    <ui:NavigationViewItem x:Name="NavigationViewItemWord" Content="Текстовый редактор" PreviewMouseLeftButtonUp="NavigationViewItemWord_PreviewMouseLeftButtonUp"/>
                    <ui:NavigationViewItem x:Name="NavigationViewItemAdminPanel" Content="Панель администратора" PreviewMouseLeftButtonUp="NavigationViewItemAdminPanel_PreviewMouseLeftButtonUp"/>
                </ui:NavigationView.MenuItems>
            </ui:NavigationView>
        </Grid>
        <Frame x:Name="Frame" Content="" Margin="0,99,0,0" NavigationUIVisibility="Hidden" RenderTransformOrigin="0.5,0.5" Background="Transparent" ContentRendered="Frame_ContentRendered">
            <Frame.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Frame.RenderTransform>
        </Frame>
        <wpfui:Card x:Name="GridLogin" Margin="480,225,480,225" Height="254">
            <Grid x:Name="GridLogin2" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" HorizontalAlignment="Left" Height="254" Margin="-12,0,0,0" Width="322">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>


                <Label x:Name="LabelPasswordGridLogin" Content="Пароль" HorizontalAlignment="Left" Margin="51,118,0,0" VerticalAlignment="Top" Height="30" Width="116" FontSize="14" Padding="0,5,5,5"/>
                <Label x:Name="LabelLoginGridLogin" Content="Введите логин" HorizontalAlignment="Left" Margin="51,38,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.517,0.558" Height="30" Width="176" FontSize="14" Padding="0,5,5,5"/>
                <Button x:Name="ButtonLogin" Style="{DynamicResource WPFUIButtonAccent}" Content="Войти" HorizontalAlignment="Left" Margin="167,198,0,0" VerticalAlignment="Top" Width="102" Click="ButtonLogin_Click" Height="25" IsDefault="True" Cursor="Hand"/>
                <PasswordBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Margin="49,148,0,0" VerticalAlignment="Top" Height="36" Width="220" Password="admin" VerticalContentAlignment="Center" FontSize="16"/>
                <TextBox x:Name="TextBoxLogin" MaxLength="20" HorizontalAlignment="Left" Height="36" Margin="49,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Text="admin" Padding="6,0" HorizontalScrollBarVisibility="Auto" FontSize="16" VerticalContentAlignment="Center"/>
                <Rectangle x:Name="RectangleLoadLogin" HorizontalAlignment="Left" Height="25" Margin="274,198,0,0" VerticalAlignment="Top" Width="25" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/34px-Vector_Loading.svg.png"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Image x:Name="ImageForgotPassword" ToolTip="Сменить пароль" HorizontalAlignment="Left" Height="25" Margin="49,198,0,0" VerticalAlignment="Top" Width="27" Source="/Images/icons8-password-reset-48.png" MouseLeave="ImageForgotPassword_MouseLeave" MouseLeftButtonUp="ImageForgotPassword_MouseLeftButtonUp" MouseMove="ImageForgotPassword_MouseMove"/>
                <Image x:Name="ImageChangeDB" ToolTip="Сменить соединение базы данных" HorizontalAlignment="Left" Height="25" Margin="83,198,0,0" VerticalAlignment="Top" Width="27" Source="/Images/icons8-database-administrator-48.png" MouseLeave="ImageForgotPassword_MouseLeave" MouseLeftButtonUp="ImageChangeDB_MouseLeftButtonUp" MouseMove="ImageForgotPassword_MouseMove"/>
                <Button x:Name="ButtonOpenNotLogin" Content="NLogin" HorizontalAlignment="Left" Margin="164,32,0,0" VerticalAlignment="Top" Click="ButtonOpenNotLogin_Click" Cursor="Hand" Background="#FFF3F3F3" Visibility="Hidden"/>

            </Grid>

        </wpfui:Card>
        <controls1:NotificationArea x:Name="WindowArea" Position="TopRight" MaxItems="3" Margin="0,99,8,8" d:IsHidden="True"/>

    </Grid>
</Window>
