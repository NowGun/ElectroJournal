<Window
    x:Class="ElectroJournal.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls1="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
    xmlns:local="clr-namespace:ElectroJournal"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="http://schemas.modernwpf.com/2019"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    xmlns:wpfuiCommon="clr-namespace:WPFUI.Common;assembly=WPFUI"
    Title="ElectroJournal"
    Width="1280"
    Height="720"
    Closing="Window_Closing"
    Icon="/Images/Logo/logo75.png"
    Loaded="Window_Loaded"
    Style="{DynamicResource UiWindowRounded}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="AnimLoadLogin">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RectangleLoadLogin" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="360">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <PowerEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimShowLoading">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RectangleLoadLogin" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimOpenFrame">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimOpenMenuAdmin" />
        <Storyboard x:Key="AnimOpenMenu" />
        <Storyboard x:Key="AnimOpenMenuStart">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimToBlackTheme">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF181818" />
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="path" Storyboard.TargetProperty="(Shape.Stroke).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00.4000000" Value="#FF181818" />
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimLogoutUser">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GridMenu" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}" />
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Hidden}" />
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Hidden}" />
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GridLogin2" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}" />
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="{x:Static Visibility.Visible}" />
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridLogin2" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="0" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <SineEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="AnimCloseFrame">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Frame" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>


    </Window.Resources>



    <Grid x:Name="GridDefault" x:FieldModifier="public">
        <Grid
            x:Name="GridNLogin"
            Margin="0,48,0,604"
            d:IsHidden="True">
            <ui:NavigationView
                x:Name="NavViewMenuNLogin"
                Height="40"
                MinWidth="100"
                Margin="10,10,365,0"
                VerticalAlignment="Top"
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="False"
                PaneDisplayMode="Top">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemSchedule1"
                        Content="Расписание"
                        PreviewMouseLeftButtonUp="NavigationViewItemSchedule_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemBoard1"
                        Content="Доска"
                        PreviewMouseLeftButtonUp="NavigationViewItemBoard_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemWord1"
                        Content="Текстовый редактор"
                        PreviewMouseLeftButtonUp="NavigationViewItemWord_PreviewMouseLeftButtonUp" />
                </ui:NavigationView.MenuItems>
            </ui:NavigationView>
            <Button
                x:Name="ButtonShowLogin"
                Width="120"
                Height="30"
                Margin="1150,15,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="ButtonShowLogin_Click"
                Content="Войти"
                FontSize="14"
                IsEnabled="False"
                Style="{DynamicResource WPFUIButtonAccent}" />

        </Grid>
        <wpfui:TitleBar
            x:Name="TitleBar"
            Grid.Row="0"
            Height="48"
            ApplicationNavigation="True"
            Background="#00000000"
            Icon="/Images/Logo/logo75.png"
            MinimizeToTray="False"
            NotifyIconDoubleClick="TitleBar_NotifyIconDoubleClick"
            NotifyIconImage="/Images/Logo/logo75.png"
            NotifyIconTooltip="ElectroJournal"
            UseNotifyIcon="True">
            <wpfui:TitleBar.NotifyIconMenu>
                <ContextMenu>
                    <MenuItem
                        x:Name="MenuItemOpen"
                        Click="MenuItemOpen_Click"
                        Header="Открыть"
                        Icon="{x:Static wpfuiCommon:Icon.Library28}"
                        Tag="open" />
                    <MenuItem
                        x:Name="MenuItemExit"
                        Click="MenuItemExit_Click"
                        Header="Выйти"
                        Icon="{x:Static wpfuiCommon:Icon.Library28}"
                        Tag="exit" />
                </ContextMenu>
            </wpfui:TitleBar.NotifyIconMenu>
        </wpfui:TitleBar>
        <Menu
            x:Name="MenuEJ"
            Height="50"
            Margin="48,-2,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderBrush="{x:Null}">
            <MenuItem
                Height="43"
                Padding="6,0,6,0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontFamily="Segoe UI Historic"
                FontSize="14"
                Header="ElectroJournal">
                <MenuItem
                    x:Name="MenuItemEJCalculator"
                    Click="MenuItemEJCalculator_Click"
                    Header="Калькулятор" />
                <MenuItem
                    x:Name="MenuItemEJHelp"
                    Click="MenuItemEJHelp_Click"
                    Header="Справка" />
                <MenuItem
                    x:Name="MenuItemEJProgInfo"
                    Click="MenuItemEJProgInfo_Click"
                    Header="О программе" />
                <MenuItem
                    x:Name="MenuItemEJBug"
                    Click="MenuItemEJBug_Click"
                    Header="Баг-репортер" />
                <MenuItem
                    x:Name="MenuItemEJSettings"
                    Click="MenuItemEJSettings_Click"
                    Header="Настройки" />
            </MenuItem>
            <MenuItem
                x:Name="MenuBoard"
                Height="42"
                Header="Доска">
                <MenuItem Header="Открыть" />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Сохранить как">
                    <MenuItem Header="Изображение в формате PNG" />
                    <MenuItem Header="Изображение в формате JPEG" />
                </MenuItem>
                <MenuItem
                    x:Name="MenuItemBoardPrint"
                    Click="MenuItemBoardPrint_Click"
                    Header="Печать" />
                <MenuItem
                    x:Name="MenuItemBoardFullScreen"
                    Click="MenuItemBoardFullScreen_Click"
                    Header="Во весь экран" />
            </MenuItem>
        </Menu>
        <Grid
            x:Name="GridMenu"
            Height="52"
            MinWidth="1272"
            Margin="0,48,0,0"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            Visibility="Visible">
            <wpfui:Icon
                x:Name="RectangleBackToMenu"
                Width="28"
                Height="32"
                Margin="17,13,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                FontSize="20"
                Glyph="ArrowLeft12"
                MouseLeftButtonUp="RectangleBackToMenu_MouseLeftButtonUp" />
            <Label
                    x:Name="LabelScheduleCall"
                    Margin="225,-41,434,0"
                    Padding="0,0,10,4"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Урок: 4" Height="35" />
            <Grid
                x:Name="GridUser"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                d:IsHidden="True">
                <ui:PersonPicture
                    x:Name="PersonPicture"
                    Width="40"
                    Height="40"
                    Margin="270,0,0,0"
                    VerticalAlignment="Center"
                    MouseLeave="RectangleUser_MouseLeave"
                    MouseLeftButtonUp="RectangleUser_MouseLeftButtonUp"
                    MouseMove="RectangleUser_MouseMove" />
                <TextBlock
                    x:Name="TextBlockTeacher"
                    MaxWidth="179.5"
                    Margin="152,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    x:FieldModifier="public"
                    FontSize="14"
                    Text="Фамилия И. О."
                    TextWrapping="Wrap" />
            </Grid>
            <Path
                x:Name="path"
                Height="1"
                Margin="0,49,0,0"
                VerticalAlignment="Top"
                Data="M42.5,48 L1220.0239,48"
                Fill="#FFF4F4F5"
                Stretch="Fill"
                Stroke="#FFE0E0E0"
                Visibility="Visible">
                <Path.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="0.1"
                        ShadowDepth="1"
                        Color="#7F3A3A3A" />
                </Path.Effect>
            </Path>
            <ui:NavigationView
                x:Name="NavViewMenuAdmin"
                Height="40"
                MinWidth="100"
                Margin="45,9,510,0"
                VerticalAlignment="Top"
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="False"
                PaneDisplayMode="Top">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemTeachers"
                        Content="Преподаватели"
                        MouseLeftButtonUp="NavigationViewItemTeachers_MouseLeftButtonUp"
                        PreviewMouseLeftButtonUp="NavigationViewItemJournal_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemDisciplines"
                        Content="Предметы"
                        MouseLeftButtonUp="NavigationViewItemDisciplines_MouseLeftButtonUp"
                        PreviewMouseLeftButtonUp="NavigationViewItemSchedule_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemStudents"
                        Content="Студенты"
                        MouseLeftButtonUp="NavigationViewItemStudents_MouseLeftButtonUp"
                        PreviewMouseLeftButtonUp="NavigationViewItemBoard_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemGroups"
                        Content="Группы"
                        MouseLeftButtonUp="NavigationViewItemGroups_MouseLeftButtonUp"
                        PreviewMouseLeftButtonUp="NavigationViewItemWord_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemCabinets"
                        Content="Кабинеты"
                        MouseLeftButtonUp="NavigationViewItemCabinets_MouseLeftButtonUp"
                        PreviewMouseLeftButtonUp="NavigationViewItemAdminPanel_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemScheduleAdmin"
                        Content="Расписание"
                        MouseLeftButtonUp="NavigationViewItemScheduleAdmin_MouseLeftButtonUp"
                        PreviewMouseLeftButtonUp="NavigationViewItemAdminPanel_PreviewMouseLeftButtonUp" />
                </ui:NavigationView.MenuItems>
            </ui:NavigationView>
            <ui:NavigationView
                x:Name="NavViewMenu"
                Height="40"
                MinWidth="100"
                Margin="45,9,330,0"
                VerticalAlignment="Top"
                d:IsHidden="True"
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="False"
                PaneDisplayMode="Top">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemJournal"
                        Content="Журнал"
                        PreviewMouseLeftButtonUp="NavigationViewItemJournal_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemSchedule"
                        Content="Расписание"
                        PreviewMouseLeftButtonUp="NavigationViewItemSchedule_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemBoard"
                        Content="Доска"
                        PreviewMouseLeftButtonUp="NavigationViewItemBoard_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemWord"
                        Content="Текстовый редактор"
                        PreviewMouseLeftButtonUp="NavigationViewItemWord_PreviewMouseLeftButtonUp" />
                    <ui:NavigationViewItem
                        x:Name="NavigationViewItemAdminPanel"
                        Content="Панель администратора"
                        PreviewMouseLeftButtonUp="NavigationViewItemAdminPanel_PreviewMouseLeftButtonUp" />
                </ui:NavigationView.MenuItems>
            </ui:NavigationView>
            <Grid
                x:Name="GridComboGroups"
                Height="35"
                Margin="792,-41,165,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <ComboBox
                    x:Name="ComboBoxGroup"
                    Width="200"
                    Height="36"
                    Margin="80,0,0,0"
                    HorizontalAlignment="Right"
                    Grid.IsSharedSizeScope="True"
                    RenderTransformOrigin="0.5,0.5">
                    <ComboBoxItem Content="ПКС 4" />
                </ComboBox>
                <Label
                    x:Name="LabelGroup"
                    Width="60"
                    Height="35"
                    Margin="5,0,200,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Группа:" />
            </Grid>
        </Grid>
        <Frame
            x:Name="Frame"
            Margin="0,99,0,0"
            d:IsHidden="True"
            Background="Transparent"
            Content=""
            ContentRendered="Frame_ContentRendered"
            NavigationUIVisibility="Hidden"
            RenderTransformOrigin="0.5,0.5">
            <Frame.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Frame.RenderTransform>
        </Frame>
        <wpfui:Card
            x:Name="GridLogin"
            Height="254"
            Margin="480,225,480,225">
            <Grid
                x:Name="GridLogin2"
                Width="322"
                Height="254"
                Margin="-12,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Grid.RenderTransform>


                <Label
                    x:Name="LabelPasswordGridLogin"
                    Width="116"
                    Height="30"
                    Margin="51,118,0,0"
                    Padding="0,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Пароль"
                    FontSize="14" />
                <Label
                    x:Name="LabelLoginGridLogin"
                    Width="176"
                    Height="30"
                    Margin="51,38,0,0"
                    Padding="0,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Введите логин"
                    FontSize="14"
                    RenderTransformOrigin="0.517,0.558" />
                <Button
                    x:Name="ButtonLogin"
                    Width="102"
                    Height="25"
                    Margin="167,198,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="ButtonLogin_Click"
                    Content="Войти"
                    Cursor="Hand"
                    IsDefault="True"
                    Style="{DynamicResource WPFUIButtonAccent}" />
                <PasswordBox
                    x:Name="TextBoxPassword"
                    Width="220"
                    Height="36"
                    Margin="49,148,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    Password="admin" />
                <TextBox
                    x:Name="TextBoxLogin"
                    Width="220"
                    Height="36"
                    Margin="49,68,0,0"
                    Padding="6,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    HorizontalScrollBarVisibility="Auto"
                    MaxLength="20"
                    Text="admin"
                    TextWrapping="Wrap" />
                <Rectangle
                    x:Name="RectangleLoadLogin"
                    Width="25"
                    Height="25"
                    Margin="274,198,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/34px-Vector_Loading.svg.png" />
                    </Rectangle.Fill>
                </Rectangle>
                <Image
                    x:Name="ImageForgotPassword"
                    Width="27"
                    Height="25"
                    Margin="49,198,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseLeave="ImageForgotPassword_MouseLeave"
                    MouseLeftButtonUp="ImageForgotPassword_MouseLeftButtonUp"
                    MouseMove="ImageForgotPassword_MouseMove"
                    Source="/Images/icons8-password-reset-48.png"
                    ToolTip="Сменить пароль" />
                <Image
                    x:Name="ImageChangeDB"
                    Width="27"
                    Height="25"
                    Margin="83,198,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseLeave="ImageForgotPassword_MouseLeave"
                    MouseLeftButtonUp="ImageChangeDB_MouseLeftButtonUp"
                    MouseMove="ImageForgotPassword_MouseMove"
                    Source="/Images/icons8-database-administrator-48.png"
                    ToolTip="Сменить соединение базы данных" />
                <Button
                    x:Name="ButtonOpenNotLogin"
                    Margin="164,32,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFF3F3F3"
                    Click="ButtonOpenNotLogin_Click"
                    Content="NLogin"
                    Cursor="Hand"
                    Visibility="Hidden" />

            </Grid>

        </wpfui:Card>
        <controls1:NotificationArea
            x:Name="WindowArea"
            Margin="0,99,8,8"
            d:IsHidden="True"
            MaxItems="3"
            Position="TopRight" />

    </Grid>
</Window>
