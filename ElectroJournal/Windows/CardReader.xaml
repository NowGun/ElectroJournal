<Window x:Class="ElectroJournal.Windows.CardReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroJournal.Windows" xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
        mc:Ignorable="d"
        Style="{DynamicResource UiWindowRounded}"
        Title="CardReader" Closed="Window_Closed" WindowStartupLocation="CenterScreen" Height="175" Width="320">
    <Grid>
        <wpfui:TitleBar
            x:Name="TitleBar"
            Grid.Row="0"
            Height="50"
            ShowMaximize="False"
            ShowMinimize="False" />
        <Label x:Name="StatusLabel" Content="Приложите карту" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26"/>
    </Grid>
</Window>
