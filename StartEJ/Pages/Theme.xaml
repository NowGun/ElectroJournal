                Width="14"
                Height="14"
                Margin="273,52,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="#FF3A3F47"
                RadiusX="5.5"
                RadiusY="5.5" />
            <Rectangle
                Width="176"
                Height="14"
                Margin="64,17,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="#FF3A3F47"
                RadiusX="3.667"
                RadiusY="3.667" />
        </Grid>
        <Button
            x:Name="ButtonBack"
            Width="200"
            Height="35"
            Margin="235,429,239,10"
            Click="ButtonBack_Click"
            Content="Назад"
            FontSize="14"
            Style="{DynamicResource WPFUIButtonStandard}" />
    </Grid>
</Page>
