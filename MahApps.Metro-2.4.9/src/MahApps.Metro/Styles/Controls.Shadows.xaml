<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    mc:Ignorable="po">

    <DropShadowEffect
        x:Key="MahApps.DropShadowEffect.Menu"
        po:Freeze="True"
        x:Shared="False"
        BlurRadius="4"
        Direction="315"
        Opacity="0.3"
        ShadowDepth="2"
        Color="{DynamicResource MahApps.Colors.MenuShadow}" />

    <DropShadowEffect
        x:Key="MahApps.DropShadowEffect.WaitingForData"
        po:Freeze="True"
        x:Shared="False"
        BlurRadius="10"
        Opacity="0"
        ShadowDepth="0"
        Color="{DynamicResource MahApps.Colors.ThemeForeground}" />

    <DropShadowEffect
        x:Key="DropShadowBrush"
        po:Freeze="True"
        x:Shared="False"
        BlurRadius="6"
        Direction="330"
        Opacity="0.3"
        ShadowDepth="0" />

</ResourceDictionary>